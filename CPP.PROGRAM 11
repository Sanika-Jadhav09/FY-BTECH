#include <iostream>
using namespace std;

// Base class
class Person {
protected:
    string name;
    int age;

public:
    void getPersonDetails() {
        cout << "Enter Name: ";
        cin >> name;
        cout << "Enter Age: ";
        cin >> age;
    }

    void displayPersonDetails() {
        cout << "Name: " << name << "\tAge: " << age << endl;
    }
};

// Derived class
class Student : public Person {
private:
    int rollNo;
    float marks;

public:
    void getStudentDetails() {
        cout << "Enter Roll Number: ";
        cin >> rollNo;
        cout << "Enter Marks: ";
        cin >> marks;
    }

    void displayStudentDetails() {
        displayPersonDetails(); // calling base class function
        cout << "Roll Number: " << rollNo << "\tMarks: " << marks << endl;
    }
};

// Main function
int main() {
    Student s1;

    cout << "--- Enter Student Details ---" << endl;
    s1.getPersonDetails();
    s1.getStudentDetails();

    cout << "\n--- Student Information ---" << endl;
    s1.displayStudentDetails();

    return 0;
}

OUTPUT
--- Enter Student Details ---
Enter Name: Riya
Enter Age: 19
Enter Roll Number: 12
Enter Marks: 88.5

--- Student Information ---
Name: Riya    Age: 19
Roll Number: 12    Marks: 88.5
