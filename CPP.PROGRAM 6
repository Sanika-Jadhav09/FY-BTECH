    void calculate();       // Function declaration
    void displayDetails();  // Function declaration
};

// Function definitions using scope resolution operator (::)
void Employee::getDetails() {
    cout << "Enter Employee Name: ";
    cin >> name;
    cout << "Enter Basic Salary: ";
    cin >> basic;
}
