#include <iostream>
using namespace std;

// Abstract base class
class Shape {
public:
    // Pure virtual function
    virtual void area() = 0;
};

// Derived class 1
class Rectangle : public Shape {
private:
    float length, breadth;

public:
    void getData() {
        cout << "Enter length and breadth of rectangle: ";
        cin >> length >> breadth;
    }

    void area() {
        cout << "Area of Rectangle = " << length * breadth << endl;
    }
};

// Derived class 2
class Circle : public Shape {
private:
    float radius;

public:
    void getData() {
        cout << "Enter radius of circle: ";
        cin >> radius;
    }

    void area() {
        cout << "Area of Circle = " << 3.14159 * radius * radius << endl;
    }
};

int main() {
    Rectangle r;
    Circle c;

    cout << "--- Rectangle ---" << endl;
    r.getData();
    r.area();

    cout << "\n--- Circle ---" << endl;
    c.getData();
    c.area();

    return 0;
}


OUTPUT
--- Rectangle ---
Enter length and breadth of rectangle: 5 3
Area of Rectangle = 15

--- Circle ---
Enter radius of circle: 4
Area of Circle = 50.2654
