#include <iostream>
using namespace std;

class Sample {
private:
    int number;

public:
    // Constructor — automatically called when an object is created
    Sample() {
        cout << "Constructor called!" << endl;
        number = 0;
    }

    // Parameterized Constructor
    Sample(int n) {
        number = n;
        cout << "Parameterized Constructor called! Number = " << number << endl;
    }

    // Display function
    void display() {
        cout << "The number is: " << number << endl;
    }

    // Destructor — automatically called when an object goes out of scope
    ~Sample() {
        cout << "Destructor called for number = " << number << endl;
    }
};

int main() {
    cout << "Creating object obj1 using default constructor..." << endl;
    Sample obj1;  // Default constructor is called

    cout << "\nCreating object obj2 using parameterized constructor..." << endl;
    Sample obj2(10);  // Parameterized constructor is called

    cout << "\nDisplaying data:\n";
    obj1.display();
    obj2.display();

    cout << "\nEnd of main function." << endl;
    return 0;
}

OUTPUT
Creating object obj1 using default constructor...
Constructor called!

Creating object obj2 using parameterized constructor...
Parameterized Constructor called! Number = 10

Displaying data:
The number is: 0
The number is: 10

End of main function.
Destructor called for number = 10
Destructor called for number = 0
