#include<iostream>
#include<iomanip>
using namespace std;
class employee
{
    private:
      float basicsalary;
      float grosssalary;
      float TA;
      float DA;
    public:
     void setsalary()
     {
          cout<<" enter basic salary"<<endl;
          cin>>basicsalary;
     TA = basicsalary*0.15;
     DA = basicsalary*0.3;
     grosssalary = TA+DA+basicsalary;
     }
     void display();
};
void employee::display()
{
    cout <<" gross salary of employee" << grosssalary<<endl;
}
int main()
{
    employee e;
    e.setsalary(); 
    e.display();
return 0;
}



out put
enter basic salary
50000
 gross salary of employee72500
