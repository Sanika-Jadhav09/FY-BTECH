#include <iostream>
using namespace std;

// Base class
class Person {
protected:
    string name;
    int age;

public:
    void getPersonData() {
        cout << "Enter Name: ";
        cin >> name;
        cout << "Enter Age: ";
        cin >> age;
    }
};

// Derived class 1 (inherits from Person)
class Student : public Person {
protected:
    int rollNo;

public:
    void getStudentData() {
        cout << "Enter Roll Number: ";
        cin >> rollNo;
    }
};

// Derived class 2 (inherits from Student)
class Result : public Student {
private:
    float marks;

public:
    void getResultData() {
        cout << "Enter Marks: ";
        cin >> marks;
    }

    void displayData() {
        cout << "\n--- Student Result Details ---" << endl;
        cout << "Name: " << name << endl;
        cout << "Age: " << age << endl;
        cout << "Roll Number: " << rollNo << endl;
        cout << "Marks: " << marks << endl;
    }
};

// Main function
int main() {
    Result r1;

    cout << "--- Enter Student Details ---" << endl;
    r1.getPersonData();
    r1.getStudentData();
    r1.getResultData();

    r1.displayData();

    return 0;
}

OUTPUT
--- Enter Student Details ---
Enter Name: Riya
Enter Age: 19
Enter Roll Number: 10
Enter Marks: 92.5

--- Student Result Details ---
Name: Riya
Age: 19
Roll Number: 10
Marks: 92.5
